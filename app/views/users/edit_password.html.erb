<div class="row">
	<div class="col s12">
		<form action="/password/reset/<%=params[:token]%>" method="post">
			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			<div class="input-field col s12">
				<input type="password" id="password" name="user[password]" class="validate">
				<label for="password">New Password</label>
			</div>
			<div class="input-field col s12">
				<input type="password" id="password_confirmation" name="user[password_confirmation]" class="validate">
				<label for="password_confirmation">Confirm New Password</label>
			</div>
			<div class="input-field col s12 m8">
				<button class="waves-effect waves-light btn" type="submit">Reset Password</button>
				<p class="error"><%= flash[:errors] if flash[:errors] %></p>
			</div>
		</form>
	</div>
</div>