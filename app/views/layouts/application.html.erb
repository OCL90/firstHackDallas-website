<!DOCTYPE html>
<html>
  <head>
    <title>FirstHackDallas</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/jquery.webui-popover/1.2.1/jquery.webui-popover.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/jquery.webui-popover/1.2.1/jquery.webui-popover.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>

  <!-- Dropdown Structure -->
  <div id="login_div" class="webui-popover-content">
    <form id="login_form" action="/sessions" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
      <div class="input-field col s12">
        <label for="email">Email</label>
        <input type="email" id="email" name="email">
      </div>
      <div class="input-field col s12">
        <label for="password">Password</label>
        <input type="password" id="password" name="password">
      </div>
      <p id="login_error_p" class="error"></p>
      <button class="btn waves-effect waves-light" type="submit" name="action">Log In</button>
    </form>
  </div>

  <!-- responsive menu+dropdown V -fs -->
    <div class="navbar-fixed">
      <nav class="light-blue lighten-1" role="navigation">
        <div class="nav-wrapper container"> <a href="#!" class="brand-logo"><i><%= image_tag "logo_new.gif", class: "logo_icon" %></i>First Hack Dallas</a>
          <ul class="right hide-on-med-and-down">
          <% if admin %>
            <li><a href="/admins/dashboard">Admins</a></li>
          <% end %>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/events">Events</a></li>
            <% if current_user %>
              <li><a href="/teams">Teams</a></li>
            <% else %>
              <li><a href="/users/new">Register</a></li>
            <% end %>
            <li><a href="/contact">Contact</a></li>
            <% if current_user %>
            <li><a href="/sessions" data-method="delete">Log Out</a></li>
            <% else %>
            <li><a href="#" id="login">Log In<i class="material-icons right">arrow_drop_down</i></a></li>
            <% end %>
          </ul>

          <ul id="nav-mobile" class="side-nav" style="left: 0px;">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/events">Events</a></li>
            <% if current_user %>
              <li><a href="/teams">Teams</a></li>
            <% else %>
              <li><a href="/users/new">Register</a></li>
            <% end %>
            <li><a href="/contact">Contact</a></li>
            <% if current_user %>
            <li><a href="/sessions" data-method="delete">Log Out</a></li>
            <% else %>
            <li><a href="#" id="login">Log In<i class="material-icons right">arrow_drop_down</i></a></li>
            <% end %>
          </ul>
          <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
      </nav>
    </div>
    <!-- responsive dropdown^  -fs -->

  	<div class="container">
	    <%= yield %>
	  </div>
  </body>
</html>
